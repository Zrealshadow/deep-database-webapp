{
  "id": "olist",
  "name": "Olist E-commerce",
  "category": "E-commerce",
  "description": "Brazilian e-commerce marketplace dataset from Kaggle containing real commercial data with orders, products, sellers, customers, payments, and reviews. Enables delivery delay and customer satisfaction prediction.",
  "source": "Kaggle / Google Drive",
  "download_url": "https://www.kaggle.com/datasets/olistbr/brazilian-ecommerce/data",
  "num_tables": 8,
  "total_rows": 500000,
  "val_timestamp": "2018-03-01",
  "test_timestamp": "2018-06-01",
  "temporal_coverage": {
    "start": "2016-09-04",
    "end": "2018-08-31",
    "days": 727
  },
  "tables": [
    {
      "name": "customer",
      "description": "Customer information and geographic location",
      "num_rows": 99441,
      "num_columns": 5,
      "primary_key": "customer_id",
      "time_column": null,
      "foreign_keys": [
        {"column": "zip_code_prefix", "references": "geolocation.zip_code_prefix"}
      ],
      "sample_columns": ["customer_id", "customer_unique_id", "zip_code_prefix", "city", "state"]
    },
    {
      "name": "geolocation",
      "description": "Brazilian zip code coordinates and geographic data",
      "num_rows": 1000163,
      "num_columns": 5,
      "primary_key": "zip_code_prefix",
      "time_column": null,
      "foreign_keys": [],
      "sample_columns": ["zip_code_prefix", "lat", "lng", "city", "state"]
    },
    {
      "name": "seller",
      "description": "Seller profiles and locations",
      "num_rows": 3095,
      "num_columns": 4,
      "primary_key": "seller_id",
      "time_column": null,
      "foreign_keys": [
        {"column": "zip_code_prefix", "references": "geolocation.zip_code_prefix"}
      ],
      "sample_columns": ["seller_id", "zip_code_prefix", "city", "state"]
    },
    {
      "name": "order",
      "description": "Order information with timestamps and delivery status",
      "num_rows": 99441,
      "num_columns": 8,
      "primary_key": "order_id",
      "time_column": "purchase_time",
      "foreign_keys": [
        {"column": "customer_id", "references": "customer.customer_id"}
      ],
      "sample_columns": ["order_id", "customer_id", "order_status", "purchase_time", "approval_time", "delivered_carrier_time", "delivered_customer_time", "estimated_delivery_time"]
    },
    {
      "name": "order_item",
      "description": "Individual items within orders with pricing",
      "num_rows": 112650,
      "num_columns": 7,
      "primary_key": "order_item_id",
      "time_column": null,
      "foreign_keys": [
        {"column": "order_id", "references": "order.order_id"},
        {"column": "product_id", "references": "product.product_id"},
        {"column": "seller_id", "references": "seller.seller_id"}
      ],
      "sample_columns": ["order_item_id", "order_id", "product_id", "seller_id", "shipping_limit_date", "price", "freight_value"]
    },
    {
      "name": "product",
      "description": "Product catalog with categories and dimensions",
      "num_rows": 32951,
      "num_columns": 9,
      "primary_key": "product_id",
      "time_column": null,
      "foreign_keys": [],
      "sample_columns": ["product_id", "product_category_name", "product_name_length", "product_description_length", "product_photos_qty", "product_weight_g", "product_length_cm", "product_height_cm", "product_width_cm"]
    },
    {
      "name": "payment",
      "description": "Payment methods and installments per order",
      "num_rows": 103886,
      "num_columns": 5,
      "primary_key": "payment_id",
      "time_column": null,
      "foreign_keys": [
        {"column": "order_id", "references": "order.order_id"}
      ],
      "sample_columns": ["payment_id", "order_id", "payment_type", "payment_installments", "payment_value"]
    },
    {
      "name": "review",
      "description": "Customer reviews and satisfaction scores",
      "num_rows": 99224,
      "num_columns": 7,
      "primary_key": "review_id",
      "time_column": "creation_time",
      "foreign_keys": [
        {"column": "order_id", "references": "order.order_id"}
      ],
      "sample_columns": ["review_id", "order_id", "review_score", "review_comment_title", "review_comment_message", "creation_time", "answer_time"]
    }
  ],
  "tasks": [
    {
      "id": "order-delay",
      "name": "Order Delay Prediction",
      "task_type": "Binary Classification",
      "description": "Predict if an order will be delivered late (delivered_customer_time > estimated_delivery_time)",
      "entity_table": "order",
      "target_col": "is_delayed",
      "metrics": ["ROC-AUC", "F1-Score", "Precision", "Recall"],
      "difficulty": "Medium",
      "train_size": 60000,
      "val_size": 15000,
      "test_size": 15000,
      "train_positive_rate": 0.07,
      "val_positive_rate": 0.11,
      "test_positive_rate": 0.05
    }
  ],
  "statistics": {
    "avg_items_per_order": 1.13,
    "avg_review_score": 4.09,
    "most_popular_payment": "credit_card",
    "most_popular_categories": ["bed_bath_table", "health_beauty", "sports_leisure"],
    "temporal_split_strategy": "3-month validation, 3-month test",
    "geographic_coverage": "Brazil (all states)",
    "delivery_metrics": {
      "avg_delivery_days": 12.5,
      "on_time_rate": 0.93
    }
  }
}
